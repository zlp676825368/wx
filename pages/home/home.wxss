/* pages/home/home.wxss */
.title{
  margin: 10rpx 0 10rpx 20rpx;
  font-weight: 700;
  color: #835F41
}
.floor1Pic >image{
  width: 100%;
  height: 200rpx;
}
.floor1{
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
  border-bottom: 20rpx solid #eee
}
.floor1 >.left{
  flex: 1;
}
.floor1 >.left>image{
  width: 100%;
  height: 300rpx;
  display: block;
}
.floor1 >.left>image:nth-child(1){
  border-bottom-color: red;
}
.floor1 >.right{
  flex: 1;
  border-left: 1rpx solid white;
}
.floor1 >.right>image{
  width: 100%;
  height: 200rpx;
  display: block;
}
.floor1 >.right>image:nth-child(1){
  border-bottom-color: red;
}
.floor1 >.right>image:nth-child(2){
  border-bottom-color: red;
}

.recommend-title{
  color: #835F41;
  text-align: center;
  padding: 10rpx 0;
  font-weight: 600
}




