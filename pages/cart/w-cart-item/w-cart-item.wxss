  color: red;
  font-size: 32rpx;
  padding-left: 20rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}
.price>text{
  display: inline-block;
  text-align: center;
  margin-top: 100rpx;
}
