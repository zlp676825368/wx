/* pages/cart/w-cart-item/w-cart-item.wxss */
.cart-item{
  height: 300rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  background-color: white;
  border-bottom: 1rpx solid #eee;
  overflow: hidden;
}

/*checkbox*/
.cart-item>checkbox{
  flex: 1;
  line-height: 300rpx;
  padding-left: 20rpx;
}
/*商品图片*/
.cart-item>image{
  flex: 2;
  height: 180rpx;
  display: block;
  margin-top:50rpx;
  border: 1rpx solid #eee;
  padding: 10rpx;
}

/*商品名称，加减购物车*/
.cart-item>.title{
  flex: 3;
  font-size: 28rpx;
  color: #555;
  margin-top:70rpx;
  padding-left: 20rpx;
}
.title>.good-name{
  line-height: 40rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.title>.cart{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.cart>text{
  flex: 1;
  display: block;
  text-align: center;
  border: 1rpx solid #eee;
  width: 60prx;
  height: 70rpx;
  line-height: 65rpx;
  font-size: 50rpx;
  margin-top: 10rpx;
}
.cart>text:nth-child(2){
  font-size: 32rpx;
  color: red;
  line-height: 70rpx;
  border-right: none;
  border-left: none;
}












